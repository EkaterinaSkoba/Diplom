{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,  // Позволяет постепенный переход (JS и TS вместе)
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,   // Если используете Babel или SWC
    "jsx": "react-jsx",
    "baseUrl": "src"  // Для удобных путей импорта
  },
  "include": ["src"]
}